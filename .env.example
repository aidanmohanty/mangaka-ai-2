# JWT Secret for token signing (Generate secure key for production)
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production

# MongoDB Connection URI
# For local development with MongoDB installed:
# MONGODB_URI=mongodb://localhost:27017/mangaka-ai
# For MongoDB Atlas cloud (recommended for development):
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mangaka-ai?retryWrites=true&w=majority

# Port configuration
PORT=5003

# Node Environment
NODE_ENV=development

# AI Service Configuration
AI_SERVICE_URL=http://localhost:5001

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp